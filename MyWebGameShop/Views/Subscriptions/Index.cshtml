@model IEnumerable<MyWebGameShop.Models.SubscriptionUserInfo>  
@{
    ViewData["Title"] = "Подписки";
}
<h2 class="mb-3">Мои подписки</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Подписок нет.</div>
}
else
{
    <table class="table">
        <thead><tr>
            <th>Тариф</th><th>Статус</th><th>Начало</th><th>Окончание</th><th></th>
        </tr></thead>
        <tbody>
        @foreach (var s in Model)
        {
            <tr>
                @* <td>@s.SubscriptionTier</td> *@
                <td>@s.SubscriptionStatus</td>
                <td>@s.SubscriptionStartDate.ToString("yyyy-MM-dd")</td>
                <td>@s.SubscriptionEndDate.ToString("yyyy-MM-dd")</td>
                <td class="text-end">
                    <form asp-action="Unsubscribe" method="post" asp-route-userId="@s.UserId" asp-route-subscriptionId="@s.Id">
                        <button class="btn btn-sm btn-outline-danger" type="submit">Отписаться</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
}